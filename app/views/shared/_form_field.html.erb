<div class="form-group-1">
  <% if field_type == :text_area %>
    <%= f.label field_name, t("form.label.product.#{field_name}"), class: "text-area-description" %>
    <%= f.text_area field_name, class: "form-control", placeholder: t("form.placeholder.#{field_name}") %>
  <% elsif field_type == :number_field %>
    <%= f.label field_name, t("form.label.product.#{field_name}") %>
    <%= f.number_field field_name, class: "form-control", placeholder: t("form.placeholder.#{field_name}"), step: step, min: min %>
  <% else %>
    <%= f.label field_name, t("form.label.product.#{field_name}") %>
    <%= f.text_field field_name, class: "form-control", placeholder: t("form.placeholder.#{field_name}") %>
  <% end %>
</div>
