<% provide(:title, t("title.forgot_password")) %>

<div class="form-email-input">
  <div class="form-email-input__container">
    <div class="digihub_logo">
      <%= image_tag "digihub_logo.png", alt: "DigiHub Logo" %>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, t("form.label.user.email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("form.placeholder.email") %>
      </div>

      <%= f.submit t("view.forgot_password.submit"), class: "btn btn-submit" %>

      <div class="options">
        <%= link_to t("view.sign_in.title"), new_session_path(resource_name), class: "back-to-login" %>
      </div>
    <% end %>
  </div>
</div>
