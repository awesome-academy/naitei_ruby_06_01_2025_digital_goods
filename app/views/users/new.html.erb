<% provide(:title, t("title.sign_up")) %>
<div class="registration-form">
  <div class="registration-form__container">
  <div class="digihub_logo">
    <%= image_tag "digihub_logo.png", alt: "DigiHub Logo" %>
  </div>
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render "shared/error_messages", object: f.object%>
    <div class="form-group">
      <%= f.label :full_name, t("form.label.user.full_name") %>
      <%= f.text_field :full_name, class: "form-control", placeholder: t("form.placeholder.full_name") %>
    </div>
  
    <div class="form-group">
      <%= f.label :user_name, t("form.label.user.user_name") %>
      <%= f.text_field :user_name, class: "form-control", placeholder: t("form.placeholder.user_name") %>
    </div>
  
    <div class="form-group">
      <%= f.label :telephone, t("form.label.user.telephone") %>
      <%= f.phone_field :telephone, class: "form-control", placeholder: t("form.placeholder.telephone") %>
    </div>
  
    <div class="form-group">
      <%= f.label :email, t("form.label.user.email") %>
      <%= f.email_field :email, class: "form-control", placeholder: t("form.placeholder.email") %>
      <small class="form-text text-muted"><%= t("messages.email_notice") %></small>
    </div>
  
    <div class="form-group">
      <%= f.label :password, t("form.label.user.password") %>
      <%= f.password_field :password, class: "form-control", placeholder: t("form.placeholder.password") %>
      <small class="form-text text-muted"><%= t("messages.password_notice") %></small>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation, t("form.label.user.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("form.placeholder.password_confirmation") %>
    </div>
  
    <div class="form-check">
      <%= f.check_box :newsletter, class: "form-check-input", id: "newsletter" %>
      <%= f.label :newsletter, t("form.label.user.newsletter"), class: "form-check-label" %>
    </div>
  
    <div class="form-check required">
      <%= f.check_box :terms, class: "form-check-input", id: "terms", required: true %>
        <label class="form-check-label" for="terms">
          <%= t("messages.terms", terms: link_to(t("messages.terms_of_use"), "#"), privacy_policy: link_to(t("messages.privacy_policy"), "#")).html_safe %>
        </label>
    </div>
  
    <%= f.submit t("view.sign_up.title"), class: "btn btn-register" %>
  <% end %>
  <div class="login-link">
    <%= t("view.sign_up.you_have_an_account") %>
    <%= link_to t("view.sign_up.login_now"), login_path %>
  </div> 
  </div>
</div>
