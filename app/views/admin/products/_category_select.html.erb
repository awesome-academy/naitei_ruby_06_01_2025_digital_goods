<span class="text_field"><%= text_field_content %></span>
<%= bootstrap_icon "chevron-down", height: Settings.default.view.admin.arrow_icon_size %>
<% if categories.present? %>
  <div class="list-categories">
    <% categories.each do |category| %>
      <%= form_with url: admin_category_path, method: (level == 1 ? :get : :post), data: { turbo_stream: true } do |form| %>
        <%= hidden_field_tag :category_id, category.id %>
        <%= hidden_field_tag :category_path, category.path %>
        <%= submit_tag category.name, class: "item-category select-item" %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="list-categories">
    <span><%= t("view.admin.product.no_data") %></span>
  </div>
<% end %>
